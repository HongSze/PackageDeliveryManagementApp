        </ul>
    </nav>
    <div class="content">
        <h2>Add Package</h2>
        <form action="/33934479/HongSze/packages/addPackage" method="POST">
            <div class="form-group">
                <label for="package_title" class="form-label">Package Title:</label>
                <input type="text" id="package_title" name="package_title" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="package_weight" class="form-label">Package Weight:</label>
                <input type="number" id="package_weight" name="package_weight" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="package_destination" class="form-label">Package Destination:</label>
                <input type="text" id="package_destination" name="package_destination" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="package_description" class="form-label">Package Description:</label>
                <input type="text" id="package_description" name="package_description" class="form-control">
            </div>
            <div class="form-group">
                <label for="package_isAllocated" class="form-label">Is Allocated:</label>
                <input type="checkbox" id="package_isAllocated" name="package_isAllocated" class="form-check-input">
            </div>
            <div class="form-group">
                <label for="driver_id" class="form-label">Driver ID:</label>
                <select id="driver_id" name="driver_id" class="form-select">
                    <% drivers.forEach(driver => { %>
                        <option value="<%= driver._id %>"><%= driver.driver_id %></option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Package</button>
        </form>
    </div>
